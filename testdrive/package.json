{
  "name": "ipl-ticket-booking",
  "version": "1.0.0",
  "description": "IPL Ticket Booking System with comprehensive features",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd client && npm install",
    "start": "node server/index.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "stripe": "^13.5.0",
    "nodemailer": "^6.9.4",
    "twilio": "^4.15.0",
    "qrcode": "^1.5.3",
    "pdfkit": "^0.13.0",
    "multer": "^1.4.5-lts.1",
    "express-rate-limit": "^6.10.0",
    "helmet": "^7.0.0",
    "express-validator": "^7.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.0"
  },
  "keywords": ["ipl", "ticket", "booking", "cricket", "e-commerce"],
  "author": "IPL Ticket System",
  "license": "MIT"
}
